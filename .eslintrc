{
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "globals": {
    "XMLHttpRequest": true,
    "btoa": true,
    "pnjScripts": true,
  },
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "no-console": ["error", { allow: ["warn", "error"] }],
    "comma-dangle": ["error", "always-multiline"],
    "curly": ["error", "multi", "consistent"],
  }
}
